{
    "env": {
        "browser": false,
        "commonjs": true,
        "es6": true
    },
    "parserOptions": {
        "ecmaVersion": 9
    },
    "plugins": ["node"],
    "extends": ["eslint:recommended", "plugin:node/recommended"],
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "never"
        ],
        "node/exports-style": [
            "error",
            "module.exports"
        ],
        "no-console": ["error", { "allow": ["warn", "error"] }]
    }
}